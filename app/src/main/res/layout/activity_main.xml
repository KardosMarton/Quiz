                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question6" />

            <RadioGroup
                android:id="@+id/AnswerBox06"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
