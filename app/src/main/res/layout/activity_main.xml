                android:text="@string/AnswerQ9A5" />

            <TextView
                style="@style/QuizQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question10" />

            <CheckBox
                android:id="@+id/Answer10a"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AnswerQ10A1" />

            <CheckBox
                android:id="@+id/Answer10b"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AnswerQ10A2" />

            <CheckBox
                android:id="@+id/Answer10c"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AnswerQ10A3" />

            <CheckBox
                android:id="@+id/Answer10d"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AnswerQ10A4" />

            <CheckBox
                android:id="@+id/Answer10e"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AnswerQ10A5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="submitAction"
                    android:text="@string/SubmitButton"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btn_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="3"
                    android:onClick="sendResultViaEmail"
                    android:text="@string/ViaEmailButton"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="resetAnswers"
                    android:text="@string/RetakeButton"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
