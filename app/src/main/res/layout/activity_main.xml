                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question10"
                style="@style/QuizQuestion"
                />

            <CheckBox
                android:id="@+id/Answer10a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuizAnswer"
                android:text="@string/AnswerQ10A1"
                />

