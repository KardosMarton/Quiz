                style="@style/QuizAnswer"
                android:text="@string/AnswerQ10A5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/SubmitButton"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:onClick="submitAction"
                    />

                <Button
                    android:id="@+id/btn_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/ViaEmailButton"
                    android:layout_gravity="right"
                    android:onClick="sendResultViaEmail"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/RetakeButton"
                    android:onClick="resetAnswers"
                    />

            </LinearLayout>

