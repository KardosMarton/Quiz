            <CheckBox
                android:id="@+id/Answer7b"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AnswerQ7A2" />

            <CheckBox
                android:id="@+id/Answer7c"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AnswerQ7A3" />

            <CheckBox
                android:id="@+id/Answer7d"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AnswerQ7A4" />

