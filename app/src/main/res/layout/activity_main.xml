<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.quiz.MainActivity">

    <ImageView
        android:id="@+id/img_bbtgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bbtgroupimage420x151"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_bbtgroup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question1"
                style="@style/QuizQuestion"
                />
            <RadioGroup
                android:id="@+id/AnswerBox01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuizAnswer"
                >

                <RadioButton
                    android:id="@+id/Answer1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ1A1"
                    />

                <RadioButton
                    android:id="@+id/Answer1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ1A2"
                    />

                <RadioButton
                    android:id="@+id/Answer1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ1A3"
                    />

                <RadioButton
                    android:id="@+id/Answer1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ1A4"
                    />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question2"
                style="@style/QuizQuestion"
                />

            <RadioGroup
                android:id="@+id/AnswerBox02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuizAnswer"
                >
                <RadioButton
                    android:id="@+id/Answer2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ2A1"
                    />

                <RadioButton
                    android:id="@+id/Answer2b"
