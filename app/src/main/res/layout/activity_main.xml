<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.android.quiz.MainActivity">

    <ImageView
        android:id="@+id/img_bbtgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bbtgroupimage420x151"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_bbtgroup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/QuizQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question1" />

            <RadioGroup
                android:id="@+id/AnswerBox01"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Answer1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ1A1" />

                <RadioButton
                    android:id="@+id/Answer1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ1A2" />

                <RadioButton
                    android:id="@+id/Answer1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ1A3" />

                <RadioButton
                    android:id="@+id/Answer1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ1A4" />

            </RadioGroup>

            <TextView
                style="@style/QuizQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question2" />

            <RadioGroup
                android:id="@+id/AnswerBox02"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Answer2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ2A1" />

                <RadioButton
                    android:id="@+id/Answer2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ2A2" />

                <RadioButton
                    android:id="@+id/Answer2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ2A3" />

                <RadioButton
                    android:id="@+id/Answer2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ2A4" />

            </RadioGroup>

            <TextView
                style="@style/QuizQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question4" />

            <RadioGroup
                android:id="@+id/AnswerBox04"
                style="@style/QuizAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Answer4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ4A1" />

                <RadioButton
                    android:id="@+id/Answer4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AnswerQ4A2" />

